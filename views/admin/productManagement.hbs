<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

  <link href="toastr.min.css" rel="stylesheet"/>

<div class="content-wrapper">
  <div class="container-fluid">
    <div class="row ">
      <a class="btn btn-primary ml-5" href="/admin/addproduct">Add Product</a>

      <div class="col-md-12 p-3">
        <div class="card ">
          <div class="card-body">
            <div class="table-responsive">
              <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                  <tr>
                    <th class="th-sm">No
                    </th>
                    <th class="th-sm">Name
                    </th>
                    <th class="th-sm">Category
                    </th>
                    <th class="th-sm">Price
                    </th>
                    <th class="th-sm">Offer Price
                    </th>
                    <th class="th-sm">Stock
                    </th>
                    <th class="th-sm">Description
                    </th>
                    <th class="th-sm">Image
                    </th>
                    <th class="th-sm">Activities
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    {{#each products}}
                    <th scope="row">{{math @index "+"1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.offerprice}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="height: 50px; width: 50px;" src='/productImage/{{this.image1}}' alt=""></td>
                    <td>
                      <a href="/admin/editproduct?id={{this._id}}" class="btn btn-primary" >Edit<a/>
                      <a href="/admin/deleteproduct?id={{this._id}}" class="btn btn-danger" id="show-toast-btn">Delete</a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
